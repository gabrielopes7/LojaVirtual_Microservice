@model LojaVirtual.Web.Models.ProdutoViewModel

<h3>Deletar Produto</h3>
<h4>Tem certeza que deseja deletar o produto?</h4>

<div>
    <hr/>
    <dl class="col-sm-2">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NomeCategoria)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NomeCategoria)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Preco)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Preco)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Estoque)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Estoque)
        </dd>
        <dd class="col-sm-10">
            @Html.DisplayNameFor(model => model.ImagemURL)
        </dd>
    </dl>
    <div class="row">
        <div class="form-group col-md-4">
            <img src="~/images/@Model.ImagemURL"/>
        </div>
    </div>

    <form asp-action="DeleteProduto">
        <input type="hidden" asp-for="Id"/>
        <div class="form-group" style="padding-top: 10px">
            <input type="submit" class="btn btn-danger" value="Deletar" />
            <a asp-action="Index" class="btn btn-info">Voltar para a lista</a>
        </div>
    </form>
</div>

